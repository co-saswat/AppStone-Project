<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anshutiwari.telemedico">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.VideoOrChatActivity"></activity>
        <activity android:name=".view.ListOfDiesaseActivity"></activity>
        <activity android:name=".view.ListOfDocActivity" />
        <activity android:name="ui.EditProfileActivity" />
        <activity android:name="ui.NewsActivity" />
        <activity android:name=".view.VerifyPhoneActivity" />
        <activity android:name=".view.SignUpActivity" />
        <activity android:name=".view.LoginActivity" />
        <activity android:name="ui.DashBoardActivity" />
        <activity
            android:name=".view.OnBoardActivity"
            android:theme="@style/Fullscreen" />
        <activity
            android:name=".view.SplashActivity"
            android:theme="@style/Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>